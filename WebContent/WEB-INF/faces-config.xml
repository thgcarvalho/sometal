<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<!-- Navegação para a area do usuario -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/pages/home.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>logar</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- USUARIOS -->

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>home</from-outcome>
			<to-view-id>/pages/home.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<!-- FUNCIONARIOS -->

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>funcionarios</from-outcome>
			<to-view-id>/pages/funcionario/funcionarios.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<!-- FOLHA DE PONTO -->

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>pontos</from-outcome>
			<to-view-id>/pages/ponto/pontos.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- USUARIOS -->

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>usuarios</from-outcome>
			<to-view-id>/pages/usuario/usuarios.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>criarUsuario</from-outcome>
			<to-view-id>/pages/usuario/criarUsuario.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>editarUsuario</from-outcome>
			<to-view-id>/pages/usuario/editarUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<application>
		<message-bundle>messages</message-bundle>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<converter>
		<converter-id>valorConverter</converter-id>
		<converter-class>br.com.sometal.converter.ValorConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>toUpperCaseConverter</converter-id>
		<converter-class>br.com.sometal.converter.ToUpperCaseConverter</converter-class>
	</converter>
	
	 <validator>
	     <validator-id>emailValidator</validator-id>
	     <validator-class>br.com.sometal.validator.EmailValidator</validator-class>
 	 </validator>
	
</faces-config>
